<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="15dp"
    android:paddingBottom="70dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="299dp"
        android:layout_height="542dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/examImage"
                android:layout_width="328dp"
                android:layout_height="172dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_oge_logo" />

            <LinearLayout
                android:id="@+id/exam_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/oge_exam_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:fontFamily="@font/dela_gothic_one"
                    android:gravity="center"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/needClass_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/dela_gothic_one"
                    android:text="@string/need_class_exam"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/needTime_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/dela_gothic_one"
                    android:text="@string/need_time_exam"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/title_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"

                    android:fontFamily="@font/dela_gothic_one"
                    android:gravity="center"
                    android:text="@string/exam_text_title"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/exam_text"
                    android:layout_width="278dp"
                    android:layout_height="155dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/dela_gothic_one"
                    android:text="123123213123"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>