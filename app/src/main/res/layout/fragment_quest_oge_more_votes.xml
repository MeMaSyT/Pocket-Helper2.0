<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.memasyt.pocketHelper.fragments.QuestFragment_oge_moreVotes">

    <ImageButton
        android:id="@+id/buttonBack_toLevels3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|top"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_revert"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_quest_oge_more_votes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dela_gothic_one"
            android:gravity="center"
            android:padding="10dp"
            android:text="LABEL"
            android:textColor="#D755452A"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_quest_oge_more_votes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dela_gothic_one"
            android:gravity="center"
            android:padding="10dp"
            android:text="text"
            android:textColor="#D755452A"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkBox_oge1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="5dp"
            android:buttonTint="#439846"
            android:fontFamily="@font/dela_gothic_one"
            android:gravity="left"
            android:text="voteText\ntest\ntest"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBox_oge2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:buttonTint="#439846"
            android:fontFamily="@font/dela_gothic_one"
            android:gravity="left"
            android:text="voteText\ntest\ntest"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBox_oge3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:buttonTint="#439846"
            android:fontFamily="@font/dela_gothic_one"
            android:gravity="left"
            android:text="voteText\ntest\ntest"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/button_proverka_more_votes_oge"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/style_button_oge"
            android:fontFamily="@font/dela_gothic_one"
            android:gravity="center"
            android:text="Проверить"
            android:textColor="@color/black"
            android:textSize="34sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/level_complite_quest_oge_more_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:translationY="260dp">

        <ImageView
            android:id="@+id/level_complite_quest_oge_more_votes_image"
            android:layout_width="match_parent"
            android:layout_height="259dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_truevoteimage" />

        <TextView
            android:id="@+id/trueVote_text_oge_more_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dela_gothic_one"
            android:gravity="center"
            android:text="1 / 10"
            android:textSize="34sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/level_failed_quest_oge_more_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:translationY="260dp">

        <ImageView
            android:id="@+id/level_failed_quest_oge_more_votes_image"
            android:layout_width="match_parent"
            android:layout_height="259dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_falsevoteimage" />

        <TextView
            android:id="@+id/falseVote_text_oge_more_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dela_gothic_one"
            android:gravity="center"
            android:text="1 / 10"
            android:textSize="34sp" />
    </FrameLayout>
</FrameLayout>