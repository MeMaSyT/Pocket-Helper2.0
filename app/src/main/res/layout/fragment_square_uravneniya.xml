<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragments.info.SquareUravneniyaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_back_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="center"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@android:drawable/ic_menu_revert"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dela_gothic_one"
            android:gravity="center_horizontal|top"
            android:text="Квадратные уравнения"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_square"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:fontFamily="@font/dela_gothic_one"
            android:padding="5dp"
            android:text="@string/square_uravneniya_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/formuls_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/style_button_oge"
            android:fontFamily="@font/dela_gothic_one"
            android:gravity="center"
            android:onClick="btn_square_calc"
            android:text="Калькулятор квадратных уравнений"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </LinearLayout>
</FrameLayout>